@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barangay</title>
    <link href="~/assets/bootstrap-5.3.3-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/admin-loginform.css" rel="stylesheet" />
</head>
<body>
    <div class="body-container vh-100 d-flex justify-content-center align-items-center">
        <div class="login-container container">
            <div class="row">
                <div class="col right p-0">
                    <div class="container">
                        <div class="LogoPlace mt-2">
                            <img src="~/assets/images/image (1).png" class="login-logo"/>
                        </div>
                        <div class="">
                            <h3>Login</h3>
                            <h5>Log on to access baranggay account</h5>
                        </div>
                        
                        <div class="">
                            <label for="email" class="form-label mb-0">Email</label>
                            <input type="text" id="email" class="form-control mb-3" aria-describedby="passwordHelpBlock">
                            <label for="inputPassword5" class="form-label mb-0">Password</label>
                            <input type="password" id="inputPassword5" class="form-control mb-3" aria-describedby="passwordHelpBlock">
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Remember Password
                                </label>
                            </div>
                            <div>
                                <a href="#" class="text-decoration-none text-danger">Forgot Password</a>
                            </div>
                        </div>
                        <div class="mt-1">
                            <button type="button" class="btn btn-success p-3 w-100">Success</button>
                        </div>
                        <div class="">
                            <center><p>Don't have an account? <a href="#" class="text-decoration-none text-primary">Sign Up</a></p></center>
                        </div>
                    </div>
                </div>
                <div class="col left p-0">

                </div>
            </div>
            <div class="row">
                
            </div>
        </div>
    </div>
    <script src="~/assets/jquery-3.7.1.min.js"></script>
    <script src="~/assets/bootstrap-5.3.3-dist/js/bootstrap.js"></script>
</body>
</html>